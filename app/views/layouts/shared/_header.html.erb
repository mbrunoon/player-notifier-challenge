<div class="container-fluid">
    <header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom">

        <a href="/" class="h2 d-flex align-items-center col-md-3 mb-2 mb-md-0 text-dark text-decoration-none">PlayNotify</a>

        <ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0">        
            <li><%= link_to "Public", root_path, class: "nav-link px-2 link-dark" %></li>
            <li><%= link_to "Supporter", root_path, class: "nav-link px-2 link-dark" %></li>
            <li><%= link_to "Admin", root_path, class: "nav-link px-2 link-dark" %></li>
        </ul>

    </header>
    
    <% if notice %>
        <div class="row">
            <div class="col-12">
                <div class="alert alert-primary text-center" role="alert"><%=  notice %></div>
            </div>
        </div>         
    <% end %>
    <% if alert %>
        <div class="row">
            <div class="col-12">
                <div class="alert alert-danger text-center" role="alert"><%=  alert %></div>
            </div>
        </div>                 
    <% end %>     

</div>